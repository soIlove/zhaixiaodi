<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yc.zxd.mapper.UserMapper">
	<!-- <update id="updateUser" parameterType="User">
	    update t_admin set password=#{password} where username=#{username}
	</update>
	 -->
	
	<select id="getUser" parameterType="User" resultType="User">
	    select * from zusers where uphone=#{uphone} and  upwd = #{upwd}
	</select>
	
	<insert id="RegisterUser" parameterType="User"  >
			insert into zusers  values(seq_zusers.nextval,#{upwd},#{uname},#{uphone},#{uemail},#{usex},#{upicture},#{uaddr},0,null,null)
	</insert>
</mapper>
