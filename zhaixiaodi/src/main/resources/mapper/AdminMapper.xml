<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 命名空间与对应映射接口的全类名一致 -->
<mapper namespace="com.yc.zxd.mapper.AdminMapper">


	<!-- 定义sql语句 变量 -->
	<sql id="selectProfile">
		select * from admin
	</sql>

	<select id="findUser" parameterType="String" resultType="String">
		<include refid="selectProfile" />
		where uphone=#{tel}
	</select>


	<insert id="RegisterUser" parameterType="User">
		insert into zusers
		values(seq_zusers.nextval,#{upwd},#{uname},#{uphone},#{uemail},#{usex},#{upicture},#{uaddr},0,null,null)
	</insert>

	<select id="getMail" parameterType="String" resultType="String">
		select
		uemail from ZUSERS where uphone=#{tel}
	</select>

	<update id="editPwdByTel" parameterType="User">
		update ZUSERS set
		upwd=#{password} where uphone=#{tel}
	</update>

	<select id="getAdmin" parameterType="Admin" resultType="Admin">
		select *
		from Admin where adpwd=#{adpwd} and adname = #{adname}
	</select>

	<select id="getUserMsg" parameterType="String" resultType="User">
		select * from zusers where uphone=#{phonenum}
	</select>

	<update id="updatemsg" parameterType="User">
		update zusers set
		uname=#{uname} , upicture=#{upicture}
		,uaddr=#{uaddr},uemail=#{uemail},usex=#{usex} where uphone=#{uphone}
	</update>

	<select id="getAddr" parameterType="int" resultType="Address">
		select *
		from zaddr where uuid =#{uuid}
	</select>

	<delete id="deladdr" parameterType="Integer">
		delete from zaddr where
		zid=#{zid}
	</delete>

	<insert id="addaddr" parameterType="Address">
		insert into zaddr
		values(seq_zid.nextval,#{uuid},#{zaddr},null,null)
	</insert>

	<!-- +++++++++++++++++++ 分页开始 ++++++++++++++++++++++++++++++++++++ -->
	<select id="getUserPagination" parameterType="PaginationBean"
		resultMap="PaginationBeanMap">
		select count(1) total, ceil(count(1)/${pageSize}) totalPage,
		${pageSize} pageSize,${currPage} currPage from zusers
	</select>

	<!-- 使用嵌套查询的方式，处理分页 -->
	<resultMap type="PaginationBean" id="PaginationBeanMap">
		<result column="pageSize" property="pageSize" />
		<result column="currPage" property="currPage" />
		<collection property="rows"
			column="{pageSize=pageSize,currPage=currPage}" ofType="User"
			select="getPaginationUser" />
	</resultMap>

	<!-- #是采取占位符，$是直接取到值 -->
	<select id="getPaginationUser" resultType="User">
		select * from 
			(select ad.*,rownum rn from
				(select * from ZUSERS) ad
			where ${pageSize} *	${currPage}>= rownum
		)where rn >( ${currPage}-1 ) *	${pageSize}


	</select>
	<!-- +++++++++++++++++++ 分页结束 ++++++++++++++++++++++++++++++++++++ -->


</mapper>





